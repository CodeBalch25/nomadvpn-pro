generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  message   String
  source    String   @default("contact_form")
  status    String   @default("new") // new, contacted, converted, closed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([status])
  @@index([createdAt])
}

model Consultation {
  id              String    @id @default(cuid())
  name            String
  email           String
  phone           String?
  preferredDate   DateTime?
  timezone        String?
  homeIsp         String?   // ISP slug (xfinity, spectrum, tmobile_5g, etc.)
  hasMeshWifi     String?   // yes, no, unknown
  uploadSpeed     String?   // under_10, 10_25, 25_100, over_100, unknown
  technicalComfort String?  // expert, moderate, beginner
  currentSetup    String?   // What VPN/router they currently use
  travelPlans     String?   // Where they plan to travel
  employerType    String?   // employee, freelance, consultant, other
  serviceInterest String    // remote_vpn_access, easy_setup, complex_setup, premium_bundle, consultation
  recommendedTier String?   // System-recommended tier based on their setup
  notes           String?
  status          String    @default("pending") // pending, confirmed, completed, cancelled
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([email])
  @@index([status])
  @@index([preferredDate])
  @@index([createdAt])
  @@index([homeIsp])
}

model Service {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  tagline     String
  description String   @db.Text
  price       Int      // in cents (e.g., 69900 = $699.00)
  priceType   String   // one_time, monthly, custom
  features    String[] // Array of feature strings
  highlighted Boolean  @default(false)
  sortOrder   Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([active])
}

model BlogPost {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  excerpt     String
  content     String    @db.Text // Markdown content
  coverImage  String?
  published   Boolean   @default(false)
  publishedAt DateTime?
  author      String    @default("NomadVPN Pro Team")
  tags        String[]
  metaTitle   String?
  metaDesc    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@index([published])
  @@index([publishedAt])
}

model Order {
  id            String   @id @default(cuid())
  leadId        String?
  customerName  String
  customerEmail String
  serviceId     String
  serviceName   String
  amount        Int      // in cents
  status        String   @default("pending") // pending, paid, processing, shipped, completed, cancelled
  notes         String?  @db.Text
  shippingAddr  String?  @db.Text
  trackingNum   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([customerEmail])
  @@index([status])
  @@index([createdAt])
}

// ISP Compatibility Reference Table
model IspCompatibility {
  id              String   @id @default(cuid())
  ispName         String   @unique  // Display name (e.g., "Xfinity/Comcast")
  ispSlug         String   @unique  // URL-safe slug (e.g., "xfinity")
  connectionType  String             // fiber, cable, dsl, fixed_wireless, satellite, 5g_home
  hasCgnat        Boolean  @default(false)  // Whether ISP uses CGNAT
  portForwardMethod String?          // How to set up port forwarding
  difficultyScore Int      @default(1)  // 1-5 scale (1=easy, 5=impossible/CGNAT)
  recommendedTier String?            // Suggested service tier
  notes           String?  @db.Text
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([ispSlug])
  @@index([hasCgnat])
  @@index([difficultyScore])
}

// Compatibility Check Submissions (for lead capture)
model CompatibilityCheck {
  id              String   @id @default(cuid())
  email           String?
  ispSelected     String              // ISP slug they selected
  hasMeshWifi     String?             // yes, no, unknown
  uploadSpeed     String?             // under_10, 10_25, 25_100, over_100, unknown
  technicalLevel  String?             // expert, moderate, beginner
  recommendedTier String              // System recommendation
  canDiy          Boolean?            // Whether they can do DIY setup
  convertedToLead Boolean  @default(false)
  createdAt       DateTime @default(now())

  @@index([email])
  @@index([ispSelected])
  @@index([recommendedTier])
  @@index([createdAt])
}
